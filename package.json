{
    "name": "simple app",
    "version": "0.0.1",
    "description": "Steps towards a more sufficient build pipeline",
    "main": "index.js",
    "watch": {
        "sass": {
            "patterns": [
                "./src/sass"
            ],
            "extensions": "scss"
        },
        "bundle": {
            "patterns": [
                "./src/js"
            ],
            "extensions": "js"
        }
    },
    "scripts": {
        "dev": "concurrently \"npm run watch\" \"npm run bs\" ",
        "bs": "browser-sync start --server dist --files \" ./dist\" ",
        "watch": "npm-watch",
        "serve": "http-server dist",
        "sass": "sass  ./src/sass/main.scss   dist/css/main.css",
        "bundle": "esbuild src/js/index.js --sourcemap --bundle  --loader:.js=jsx --outfile=dist/js/bundle.js"
    },
    "author": "Bob",
    "license": "ISC",
    "devDependencies": {
        "browser-sync": "^2.27.7",
        "browsersync": "^0.0.1-security",
        "concurrently": "^7.0.0",
        "esbuild": "^0.14.11",
        "html-includes": "^4.4.1",
        "html-minifier": "^4.0.0",
        "http-server": "^14.1.0",
        "indium": "^5.0.0",
        "npm-watch": "^0.11.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "readable-stream": "^3.6.0",
        "sass": "^1.48.0",
        "stream-combiner2": "^1.1.1",
    },
    "dependencies": {
        
    }
}
